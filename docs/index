    <script>
        // Complete tools data for search functionality
        const toolsData = {
            general: [
                { name: 'OLAT', functions: ['Lernplattform', 'Tests', 'Videoquiz', 'Kollaboration'], category: 'general' },
                { name: 'nanoo.tv', functions: ['Medienarchiv', 'Streaming', 'Videoschnitt'], category: 'general' },
                { name: 'Microsoft 365', functions: ['Office-Programme', 'Cloud-Speicher', 'Kollaboration'], category: 'general' },
                { name: 'Adobe Creative Cloud', functions: ['Grafikdesign', 'Videobearbeitung', 'Webdesign'], category: 'general' },
                { name: 'Fobizz', functions: ['KI-Assistenz', 'KI-Chatbot', 'Textgenerierung', 'Unterrichtsmaterial'], category: 'general' },
                { name: 'To-Teach.ai', functions: ['KI-Unterricht', 'Personalisierung', 'Differenzierung'], category: 'general' },
                { name: 'findmind.ch', functions: ['Mindmapping', 'Kollaboration', 'Visualisierung'], category: 'general' },
                { name: 'E-Thek', functions: ['E-Books', 'Hörbücher', 'Digitale Medien'], category: 'general' },
                { name: 'Swissdox', functions: ['Medienarchiv', 'Recherche', 'Zeitungsartikel'], category: 'general' },
                { name: 'Statista', functions: ['Statistiken', 'Infografiken', 'Studien'], category: 'general' },
                { name: 'Clipchamp', functions: ['Videobearbeitung', 'Screenrecording', 'KI-Features'], category: 'general' },
                { name: 'PDF Annotator', functions: ['PDF-Bearbeitung', 'Annotationen', 'Handschrift'], category: 'general' }
            ],
            request: [
                { name: 'Quizlet', functions: ['Lernkarten', 'Gamification', 'Tests', 'Live-Spiele'], category: 'request' },
                { name: 'Actionbound', functions: ['Digitale Schnitzeljagd', 'Outdoor-Learning', 'GPS-Rallyes'], category: 'request' },
                { name: 'Fellofish', functions: ['Peer-Feedback', 'Kollaboration', 'Bewertung'], category: 'request' },
                { name: 'Synthesia', functions: ['KI-Videos', 'Avatar-Präsentation', 'Mehrsprachigkeit'], category: 'request' }
            ],
            free: [
                { name: 'Lumi Education', functions: ['Interaktive Inhalte', 'H5P-Editor', 'Offline-Nutzung'], category: 'free' },
                { name: 'LearningApps.org', functions: ['Interaktive Übungen', 'Quiz-Erstellung', 'Multimedia'], category: 'free' },
                { name: 'simpleshow', functions: ['Erklärvideo', 'Animation', 'Storytelling'], category: 'free' },
                { name: 'Canva for Education', functions: ['Grafikdesign', 'Präsentationen', 'Videos'], category: 'free' }
            ],
            recommended: [
                { name: 'Padlet', functions: ['Digitale Pinnwand', 'Kollaboration', 'Brainstorming'], category: 'recommended' },
                { name: 'Mentimeter', functions: ['Live-Umfragen', 'Interaktive Präsentationen', 'Quiz'], category: 'recommended' },
                { name: 'Le Chat (Mistral)', functions: ['KI-Chat', 'Markdown-Erstellung', 'Textgenerierung'], category: 'recommended' },
                { name: 'Claude (Anthropic)', functions: ['KI-Assistenz', 'Artefakte erstellen', 'Analyse'], category: 'recommended' },
                { name: 'GitHub', functions: ['Code-Hosting', 'Versionskontrolle', 'Kollaboration'], category: 'recommended' },
                { name: 'Landbot.io', functions: ['Chatbot-Erstellung', 'Dialogbasiertes Lernen'], category: 'recommended' },
                { name: 'Prezi', functions: ['Präsentationen', 'KI-Integration', 'Infografiken'], category: 'recommended' },
                { name: 'ChatGPT', functions: ['KI-Assistenz', 'Textgenerierung', 'Programmierung'], category: 'recommended' }
            ],
            hardware: [
                { name: 'Mobiles Podcaststudio', functions: ['Audio-Aufnahme', 'Podcast-Produktion', 'Interview'], category: 'hardware' },
                { name: 'VR-Brillen', functions: ['Virtual Reality', 'Immersives Lernen', 'Sport'], category: 'hardware' },
                { name: 'Zoom-Konferenzkamera', functions: ['Videokonferenz', 'Remote-Unterricht', 'Hybrid-Events'], category: 'hardware' },
                { name: '3D-Drucker', functions: ['3D-Druck', 'Prototyping', 'MINT-Projekte'], category: 'hardware' },
                { name: 'ChatGPT Pro Notebook', functions: ['KI-Assistenz', 'Fortgeschrittene KI', 'Projekte'], category: 'hardware' }
            ],
            process: [
                { name: 'Beschaffungsprozess', functions: ['Anfrageprozess', 'Evaluation', 'Entscheidung'], category: 'process' },
                { name: 'Kontakt PIKT-Team', functions: ['Beratung', 'Support', 'Schulungen'], category: 'process' },
                { name: 'Bewertungskriterien', functions: ['Qualitätssicherung', 'Standards', 'Anforderungen'], category: 'process' }
            ]
        };

        // State management
        let activeFilters = new Set();
        let searchTerm = '';

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            initializeFunctionFilters();
        });

        // Initialize function filters
        function initializeFunctionFilters() {
            const allFunctions = new Set();
            Object.values(toolsData).forEach(tools => {
                tools.forEach(tool => {
                    tool.functions.forEach(func => allFunctions.add(func));
                });
            });

            const filterContainer = document.getElementById('function-filters');
            Array.from(allFunctions).sort().forEach(func => {
                const tag = document.createElement('span');
                tag.className = 'function-tag';
                tag.textContent = func;
                tag.onclick = () => toggleFilter(func);
                filterContainer.appendChild(tag);
            });
        }

        // Toggle between categories and filters
        function showCategories() {
            document.querySelectorAll('.toggle-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelector('.toggle-btn').classList.add('active');
            document.getElementById('filter-content').classList.remove('active');
            document.getElementById('categories-content').style.display = 'block';
        }

        function showFilters() {
            document.querySelectorAll('.toggle-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.toggle-btn')[1].classList.add('active');
            document.getElementById('filter-content').classList.add('active');
            document.getElementById('categories-content').style.display = 'none';
            updateFilteredResults();
        }

        // Filter functions
        function toggleFilter(func) {
            if (activeFilters.has(func)) {
                activeFilters.delete(func);
            } else {
                activeFilters.add(func);
            }
            updateFilterUI();
            updateFilteredResults();
        }

        function clearFilters() {
            activeFilters.clear();
            searchTerm = '';
            document.getElementById('search-field').value = '';
            updateFilterUI();
            updateFilteredResults();
        }

        function performSearch() {
            searchTerm = document.getElementById('search-field').value.toLowerCase();
            updateFilteredResults();
        }

        function updateFilterUI() {
            document.querySelectorAll('.function-tag').forEach(tag => {
                if (activeFilters.has(tag.textContent)) {
                    tag.classList.add('active');
                } else {
                    tag.classList.remove('active');
                }
            });
        }

        function updateFilteredResults() {
            const resultsContainer = document.getElementById('filtered-results');
            resultsContainer.innerHTML = '';

            if (activeFilters.size === 0 && searchTerm === '') {
                resultsContainer.innerHTML = '<div class="no-results"><h3>Tools suchen</h3><p>Verwenden Sie das Suchfeld oder klicken Sie auf die Funktions-Tags oben, um Tools zu finden.</p></div>';
                return;
            }

            let foundTools = [];
            Object.values(toolsData).forEach(tools => {
                tools.forEach(tool => {
                    let matchesFilter = true;
                    let matchesSearch = true;

                    // Check function filters
                    if (activeFilters.size > 0) {
                        matchesFilter = tool.functions.some(func => 
                            activeFilters.has(func)
                        );
                    }

                    // Check search term
                    if (searchTerm) {
                        matchesSearch = 
                            tool.name.toLowerCase().includes(searchTerm) ||
                            tool.functions.some(func => func.toLowerCase().includes(searchTerm));
                    }

                    if (matchesFilter && matchesSearch) {
                        foundTools.push(tool);
                    }
                });
            });

            if (foundTools.length === 0) {
                resultsContainer.innerHTML = '<div class="no-results"><h3>Keine Tools gefunden</h3><p>Keine Tools entsprechen Ihren Suchkriterien.</p></div>';
                return;
            }

            const categoryLabels = {
                general: 'Allgemeine Lizenz',
                request: 'Per Antrag',
                free: 'Gratis',
                recommended: 'Empfohlen',
                hardware: 'Hardware',
                process: 'Prozess'
            };

            const categoryUrls = {
                general: 'general/index.html',
                request: 'request/index.html',
                free: 'free/index.html',
                recommended: 'recommended/index.html',
                hardware: 'hardware/index.html',
                process: 'process/index.html'
            };

            foundTools.forEach(tool => {
                const card = document.createElement('div');
                card.className = 'result-card';
                
                card.innerHTML = `
                    <span class="category-badge ${tool.category}">${categoryLabels[tool.category]}</span>
                    <div class="result-icon">📦</div>
                    <h3>${tool.name}</h3>
                    <div class="result-functions">
                        ${tool.functions.map(func => 
                            `<span class="result-function">${func}</span>`
                        ).join('')}
                    </div>
                    <button class="detail-button" onclick="window.location.href='${categoryUrls[tool.category]}'">
                        Zur Kategorie →
                    </button>
                `;
                
                resultsContainer.appendChild(card);
            });
        }

        // Initialize animations
        window.addEventListener('load', () => {
            document.body.style.opacity = '0';
            setTimeout(() => {
                document.body.style.transition = 'opacity 0.5s ease';
                document.body.style.opacity = '1';
            }, 100);
        });
    </script>
</body>
</html>
