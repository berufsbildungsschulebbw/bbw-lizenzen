            <!-- Filter by Functions -->
            <div id="filter-content" class="filter-content">
                <div class="search-bar">
                    <input type="text" id="search-field" placeholder="Tool suchen..." onkeyup="performSearch()">
                </div>
                <div class="function-filters" id="function-filters">
                    <!-- Dynamically populated -->
                </div>
                <button class="clear-filters" onclick="clearFilters()">Alle Filter zurücksetzen</button>
                <div class="filtered-results" id="filtered-results">
                    <!-- Filtered tools appear here -->
                </div>
            </div>
        </div>

        <!-- Categories Section -->
        <div id="categories-content" class="categories-section">
            <h2 class="categories-title">Lizenzkategorien</h2>
            <div class="categories">
                <a href="general/index.html" class="category-card general">
                    <div class="category-icon">🏫</div>
                    <h2>Allgemeine Schullizenz</h2>
                    <p>Für alle Lehrpersonen und Lernende verfügbar</p>
                </a>

                <a href="request/index.html" class="category-card request">
                    <div class="category-icon">📋</div>
                    <h2>Schullizenz per Antrag</h2>
                    <p>Limitierte Lizenzen auf Anfrage</p>
                </a>

                <a href="free/index.html" class="category-card free">
                    <div class="category-icon">🎁</div>
